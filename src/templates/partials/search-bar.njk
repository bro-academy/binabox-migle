<form class="{{ classForm }} search" action="https://some-url.com" method="get">
    <label class="search__label" for="search_input"></label>

    <input 
    class="search__input"
    type="text"
    name="search" 
    id="search_input" 
    placeholder="Search" 
    minlength="2"
    maxlength="8"
    required
/>
    <button class="search__button visually-hidden" type="submit"></button>
</form>